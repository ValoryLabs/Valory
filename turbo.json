{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "lint": {},
    "format": {
      "outputs": ["**/*.{ts,tsx,vue,js,jsx,json,md}"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
